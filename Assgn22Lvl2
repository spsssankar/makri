def find_leap_years(given_year):
    flag=True
    count=0
    # Write your logic here
    while flag==True:
        if(given_year%4==0):
            list_of_leap_years.append(given_year)
            given_year=given_year+1
            count=count+1
        else:    
            if(given_year%100==0):
                if(given_year%400==0):
                    list_of_leap_years.append(given_year)
                    given_year=given_year+1
                    count=count+1
                else:
                    continue
            else:
                continue
        if(count==15):
            flag=False
    return list_of_leap_years

list_of_leap_years=find_leap_years(2000)
print(list_of_leap_years)
